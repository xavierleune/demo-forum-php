{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}{{ parent() }} - Liste des d√©mos{% endblock %}

{% block body %}
    <h1>Nouvel article</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    {{ form_row(form.step) }}
    <div class="input-group">
        <div class="input-group-prepend">
            {{ form_label(form.url, null, {'label_attr': { 'class': 'input-group-text' } }) }}
        </div>
        {{ form_widget(form.url) }}
    </div>
    {{ form_row(form.save, { 'attr': {'class': 'mt-3 btn-primary'}}) }}
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
